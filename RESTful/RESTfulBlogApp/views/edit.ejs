<% include ./partials/header %>

<div class="ui text main container sements">
    <h1 class="ui huge header">EDIT <%= blog.title %></h1>
    <form class="ui form" action="/blogs/<%= blog.id %>?_method=PUT" method="POST">
        <div class="field">
            <label>title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>body</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <input class="ui violet basic button" type="submit">
    </form>
</div>

<% include ./partials/footer %>